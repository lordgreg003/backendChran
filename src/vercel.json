{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/blogs(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/admin(.*)",
      "dest": "/src/server.ts"
    }
  ],
  "env": {
    "PORT": "5000",
    "MONGO_URI": "@mongo-uri",
    "JWT_SECRET": "@jwt-secret",
    "CLOUDINARY_CLOUD_NAME": "@cloudinary-cloud-name",
    "CLOUDINARY_API_KEY": "@cloudinary-api-key",
    "CLOUDINARY_API_SECRET": "@cloudinary-api-secret"
  }
}
